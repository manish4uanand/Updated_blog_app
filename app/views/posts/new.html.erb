<div id="page_wrapper">
	<h1>New Post</h1>

	<%= form_for :post, url: posts_path do |f| %>
		<% if @post.errors.any? %>
			<div id="error">
				<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from savig</h2>
			</div>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		<% end %>
		<p>
			<%= f.label :title %><br/>
			<%= f.text_field :title %>
		</p>

		<p>
			<%= f.label :bode %><br/>
			<%= f.text_area :body %>
		</p>

		<p>
			<%= f.submit %>
		</p>

	<% end %>
</div>