<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<div id="error">
			<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from savig</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<p>
		<%= f.label :title %><br/>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :bode %><br/>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %>
	</p>

<% end %>